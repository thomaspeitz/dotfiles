function ethPrice {
  ethPrice=$(curl -s https://min-api.cryptocompare.com/data/price\?fsym\=ETH\&tsyms\=ETH,EUR |jq .EUR |head -c 7)
  if [ $(echo -n $ethPrice | cut -d. -f 1) -gt 36 ]
  then
    echo -n '{green}'
  else
    echo -n '{red}'
  fi
  echo -n $ethPrice
  echo -n â‚¬
}

